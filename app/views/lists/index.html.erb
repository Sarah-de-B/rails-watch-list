<div class="home-page">
  <h1>Your place to organise your watch list</h1>
  <div class="menu-card">
    <% @lists.each do |list| %>
      <div class="list">
        <h2><%= link_to list.name, list_path(list) %></h2>
        <p>Created at: <%= list.created_at.strftime("%B %d, %Y") %></p>
        <p>Last updated: <%= list.updated_at.strftime("%B %d, %Y") %></p>
      </div>
    <% end %>
  </div>
</div>
